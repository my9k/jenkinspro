pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Application Build'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Application'
            }
        }
        stage('Deployment') {
            steps {
                echo 'Application Deployed'
            }
        }
    }
    
    post{
        always{
            mail bcc: '', body: 'Your build is successful', cc: '', from: '', replyTo: '', subject: 'Completion', to: 'mayanktripathistmt3181@gmail.com'
        }
    }
}
